{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@features/*": ["apps/mobile/src/features/*"],
      "@shared/*": ["apps/mobile/src/shared/*"],
      "@rent-tracker/*": ["apps/mobile/src/*"],
      "@navigation/*": ["apps/mobile/src/app/navigation/*"]
    }
  },
  "exclude": ["node_modules"]
}
